<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_patient_raw_document">
        <t t-call="web.external_layout">

            <div class="page">
                <h2 style="text-align: center;">Patient List Report</h2>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th>Sequence</th>
                            <th>Patient name</th>
                            <th>Patient DNI</th>
                            <th>Patient State</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td>
                                    <span t-field="doc.patient_sequence"/>
                                </td>
                                <td>
                                    <span t-field="doc.name"/> <span t-field="doc.surname"/>
                                </td>
                                <td>
                                    <span t-field="doc.dni"/>
                                </td>
                                <td>
                                    <span t-field="doc.state"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="vertical_hospital.res_patient_raw">
        <t t-call="web.html_container">
            <t t-call="vertical_hospital.report_patient_raw_document" t-lang="docs[0]._get_user_lang()"/>
        </t>
    </template>

</odoo>
