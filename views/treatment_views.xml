<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="treatment_form_view" model="ir.ui.view">
        <field name="name">Treatment form view</field>
        <field name="model">treatment</field>
        <field name="arch" type="xml">

            <form string="Treatment info">
                <sheet>
                    <div class="oe_title mb24">
                        <h1>
                            <field
                                    id="treatment_code"
                                    options="{'line_breaks': False}"
                                    placeholder="Treatment Code"
                                    widget="text"
                                    class="text-break"
                                    name="code"
                            />
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                        </group>

                        <group>
                            <field name="treating_doctor"/>
                        </group>
                    </group>
                </sheet>
            </form>

        </field>
    </record>

    <record id="treatment_tree_view" model="ir.ui.view">
        <field name="name">Treatment tree view</field>
        <field name="model">treatment</field>
        <field name="arch" type="xml">

            <list string="Treatments">
                <field name="code"/>
                <field name="name"/>
                <field name="treating_doctor"/>
            </list>

        </field>
    </record>

    <record id="action_treatments" model="ir.actions.act_window">
        <field name="name">Treatments</field>
        <field name="path">vertical_hospital_treatment</field>
        <field name="res_model">treatment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Treatment
            </p>
        </field>
    </record>

</odoo>
